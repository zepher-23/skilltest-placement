<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="index.css">
    <title>sign in | sign up</title>
</head>
<body>
<div class="main">
<!-- EJS code for checking and viewing if a message has been attached
with the response inside a snackbar -->
    <% if(typeof message !== 'undefined') { %>

        <div class="snackbar snackbar-show"><h2><%= message  %></h2></div>
        
        <% } %>

        <!--  Form to handle signup  -->
    <form method="post" action="/signup" class="container">
        <h1>SIGN UP</h1>
        <div style="display:flex;flex-direction:column;margin-bottom: 20px;">
        <label for="EmployeeID">Employee ID</label>
        <input name="EmployeeID" type="text"/>

                <label for="password">password</label>

        <input name="password" type="password">
    </div>
    <button type="submit">Sign up</button>
    </form>
    <!--  Form to handle signin -->
      <form method="post" action="/signin" class="container">
        <h1>SIGN IN</h1>
                <div style="display:flex;flex-direction:column;margin-bottom: 20px;">

        <label for="EmployeeID">Employee ID</label>
        <input name="EmployeeID" type="text" />

        <label for="password">password</label>

        <input name="password" type="password">
        </div>
        <button type="submit">Sign in</button>

    </form>
</div>    
</body>
</html>